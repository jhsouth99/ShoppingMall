	<typeHandlers>
		<typeHandler javaType="java.lang.Boolean" handler="com.example.ecommerce.handler.BooleanYNTypeHandler" jdbcType="CHAR"/>
		<typeHandler javaType="boolean" handler="com.example.ecommerce.handler.BooleanYNTypeHandler" jdbcType="CHAR"/>
		<!-- DATE 컬럼 ↔ LocalDate -->
		<typeHandler javaType="java.time.LocalDate"
					 jdbcType="DATE"
					 handler="org.apache.ibatis.type.LocalDateTypeHandler"/>
		<!-- TIMESTAMP 컬럼 ↔ LocalDateTime -->
		<typeHandler javaType="java.time.LocalDateTime"
					 jdbcType="TIMESTAMP"
					 handler="org.apache.ibatis.type.LocalDateTimeTypeHandler"/>
	</typeHandlers>

	<mappers>
		<mapper resource="config/mybatis/mapper/user.xml" />
